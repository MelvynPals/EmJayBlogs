# Backend environment variables example
# Copy this file to .env and adjust values as needed.

# Server
PORT=5000

# MongoDB connection string
MONGO_URI=mongodb://127.0.0.1:27017/blogDB

# JWT (use a long random string for production)
JWT_SECRET=changeme_generate_a_long_random_secret
JWT_EXPIRES_IN=1d

# CORS allowed client origin
CLIENT_URL=http://localhost:5173

# Node environment (development|production)
NODE_ENV=development

# Optional Admin seeding (if not provided defaults are used in server.js)
ADMIN_EMAIL=admin123@example.com
ADMIN_PASSWORD=supersecurepassword
